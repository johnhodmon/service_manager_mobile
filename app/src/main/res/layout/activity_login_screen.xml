<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:context=".login"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">


<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:background="#14cd8d"
android:layout_width="match_parent"
android:id="@+id/layout4"
android:paddingTop="16dp"
android:paddingBottom="32dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/login_header"
        android:id="@+id/login_header"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_below="@+id/layout4">



    <EditText
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"

        android:ems="10"
        android:id="@+id/emailAddress"
        android:layout_marginBottom="192dp"
        android:layout_above="@+id/button"
        android:layout_toEndOf="@+id/emailAddressLabel"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/emailAddressLabel"
        android:layout_alignStart="@+id/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginButtonLabel"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:onClick="login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/emailAddressLabel"
        android:id="@+id/emailAddressLabel"
        android:hint="\@hodmonpumpservices.com"
        android:layout_alignTop="@+id/emailAddress"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/passwordLabel"
        android:id="@+id/passwordLabel"
        android:layout_alignBottom="@+id/password"
        android:layout_alignParentStart="true" />

</RelativeLayout>


</RelativeLayout>

