
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/parchment"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="ie.hodmon.computing.hodmonpumpservices.CalloutScreen">



    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/backgroundBlue"
        android:layout_width="match_parent"
        android:id="@+id/layout4"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:text="@string/reportHeader"
        android:id="@+id/reportHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
        </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout4"
        android:paddingTop="16dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/parchment"
        android:layout_width="match_parent"

        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/reportTextDefault"
        android:id="@+id/reportText"

        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/sparesHeader"
        android:id="@+id/sparesHeader"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reportText" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listOfSparesOrders"
        android:layout_below="@+id/sparesHeader"
        android:layout_marginTop="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/editReportButtonLabel"
        android:id="@+id/editReportButton"
        android:onClick="editReport"
        android:layout_alignTop="@+id/reportText"
        android:layout_alignEnd="@+id/reportText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="@string/orderSpareHeader"
        android:id="@+id/orderSpareHeader"
        android:layout_below="@+id/listOfSparesOrders"
        android:layout_centerHorizontal="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/spinnerForNewOrder"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/orderSpareHeader"
        android:layout_marginTop="32dp"
        android:layout_alignEnd="@+id/orderSpareHeader"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerForOrderQuantity"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/orderSpareHeader"
        android:layout_toEndOf="@+id/spinnerForNewOrder"
        android:entries="@array/quantitySpinnerValues"
        android:layout_toStartOf="@+id/addSpare"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/addSpareButtonLabel"
        android:id="@+id/addSpare"
        android:layout_alignTop="@+id/spinnerForOrderQuantity"
        android:layout_alignParentEnd="true"
        android:onClick="addSpare" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/moreText"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

</ScrollView>


</RelativeLayout>
