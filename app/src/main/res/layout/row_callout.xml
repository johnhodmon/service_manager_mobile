<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_row_call_symbol"
        android:src="@drawable/ic_call_black_36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="callCustomer"
        android:tint="@color/green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/job_row_product_name"
        android:id="@+id/job_row_product_name"
        android:textColor="@color/navy"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="49dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/calloutTownDefault"
        android:id="@+id/calloutTown"
        android:layout_below="@+id/job_row_product_name"
        android:layout_alignStart="@+id/job_row_product_name"
        android:layout_marginTop="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/job_row_phone"
        android:id="@+id/job_row_phone"
        android:layout_below="@+id/calloutTown"
        android:layout_alignStart="@+id/job_row_product_name"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_chevron_right_black_36dp"
        android:layout_alignBottom="@+id/calloutTown"
        android:layout_alignParentEnd="true" />


</RelativeLayout>