<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/product_history_row_date"
        android:id="@+id/product_history_row_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/purple" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/job_history_row_fault"
        android:id="@+id/product_history_row_fault"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/product_history_row_date"
        android:layout_marginTop="10dp" />



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_chevron_right_black_36dp"
        android:layout_alignBottom="@+id/calloutTown"
        android:layout_alignParentEnd="true" />


</RelativeLayout>